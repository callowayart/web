{
    "size" : 0,

    "query": { "bool": {
      <% tags.each_with_index do | tag, index | %>
        "must": { "term": {  "__tags" : "<%= tag %>"  }},
      <% end unless tags.nil? %>

      "must_not": { "term": { "__tags" : "backendonly" }}
    }},
    


    // provide our group by (aggregations in elastic search)
    "aggregations": {
        "exhibits": {
            "terms": { "field":   "__exhibit", "size": 10000 },
           
            "aggregations": {
                "uri": {
                    "terms": { 
                      "field":"uri", 
                      "size": 1   
                    }
                },

                "artist": {
                    "terms": { 
                      "field":"__artist", 
                      "size": 1   
                    }
                },

                "thumb": {
                    "terms": { 
                      "field":"thumb", 
                      "size": 1   
                    }
                }                          
            }

        }
    }
}