{
    "size" : 0,

    "query": { "bool": {
      <% tags && tags.each_with_index do | tag, index | %>
        "must": { "term": {  "__tags" : "<%= tag %>"  }},
      <% end %>

      "should": { "term": {  "__tags" : "exhibit"  }},
      "must_not": { "term": { "__tags" : "backendonly" }},
      "must_not": { "term": { "__tags" : "current" }}
    }},
    


    // provide our group by (aggregations in elastic search)
    "aggregations": {
        "exhibits": {
            "terms": { "field":   "__exhibit", "size": 10000 },
           
            "aggregations": {
                "uri": {
                    "terms": { 
                      "field":"uri", 
                      "size": 1   
                    }
                },
                "exhibit_slug": {
                    "terms": { 
                      "field":"exhibit_slug", 
                      "size": 1   
                    }
                },
                "artist": {
                    "terms": { 
                      "field":"__artist", 
                      "size": 1   
                    }
                },
                "artist_slug": {
                    "terms": { 
                      "field":"artist_slug", 
                      "size": 1   
                    }
                },                
                "exhibit_start": {
                    "terms": { 
                      "field":"exhibit_start", 
                      "size": 1   
                    }
                },  

                "exhibit_description": {
                    "terms": { 
                      "field":"exhibit_description", 
                      "size": 1   
                    }
                },                                 
                "thumb": {
                    "terms": { 
                      "field":"thumb" 
                    }
                }                          
            }

        }
    }
}