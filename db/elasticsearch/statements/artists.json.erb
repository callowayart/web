curl -XGET "http://localhost:9200/callowayart/_search?pretty=true" -d '
{
    "size" : 0,

    "query": { "bool": {

      <% @tags.each do | tag | %>
        "must": { "term": {  "__tags" : "<%= tag %>"  }}
      <% end %>
    }},
    


    // provide our group by (aggregations in elastic search)
    "aggregations": {
        "artist": {
            "terms": { "field":   "__artist"   },
           
            "aggregations": {
                "uri": {
                    "terms": { 
                      "field":"uri", 
                      "size": 1   
                    }
                   
                },

                "title": {
                    "terms": { 
                      "field":"__title", 
                      "size": 1   
                    }
                   
                }                
            }

        }
    }
}'
